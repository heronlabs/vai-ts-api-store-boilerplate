{
  "name": "my-project",
  "version": "0.0.1",
  "description": "Project created to serve as a boilerplate for api store projects.",
  "license": "MIT",
  "engines": {
    "node": ">=14.17.6"
  },
  "scripts": {
    "compile": "rm -rf ./bin && tsc --project tsconfig.bin.json",
    "lint:check": "gts lint",
    "lint:fix": "gts fix",
    "test": "jest --runInBand --colors",
    "test:unit": "yarn test --config=tests/unit/jest.config.ts",
    "test:integration": "yarn test --config=tests/integration/jest.config.ts",
    "test:e2e": "yarn test --config=tests/e2e/jest.config.ts",
    "api:start": "node bin/application/api/entry-point.js",
    "docker:build": "docker build -t my-project:latest . -f Dockerfile.local",
    "docker:up:api": "docker-compose up --build -d api",
    "docker:up:store": "docker-compose up -d store",
    "docker:down": "docker-compose down --rmi all",
    "orm:config": "ts-node ./src/application/orm/generate-config.ts",
    "orm:cli": "ts-node --project ./tsconfig.json -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "orm:clean": "rm -rf src/application/orm/migration/*.ts",
    "orm:gen": "yarn orm:cli migration:generate",
    "orm:run": "yarn orm:cli migration:run"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.5.0",
    "@jest/types": "^29.1.2",
    "@nestjs/testing": "^9.1.4",
    "@types/aws-lambda": "^8.10.106",
    "@types/jest": "^29.1.2",
    "@types/node": "^18.8.2",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.38.0",
    "eslint": "^8.24.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "gts": "^3.1.1",
    "jest": "^29.1.2",
    "jest-junit": "^14.0.1",
    "moq.ts": "^9.0.2",
    "supertest": "^6.3.0",
    "ts-jest": "^29.0.3",
    "tsconfig-paths": "3.14.1",
    "typescript": "4.4.3"
  },
  "dependencies": {
    "@heronlabs/env": "^2.0.2",
    "@nestjs/common": "^9.1.4",
    "@nestjs/core": "^9.1.4",
    "@nestjs/platform-express": "^9.1.4",
    "@nestjs/typeorm": "^9.0.1",
    "@types/lodash": "^4.14.186",
    "@vendia/serverless-express": "^4.10.1",
    "aws-lambda": "^1.0.7",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "dotenv": "^16.0.3",
    "lodash": "^4.17.21",
    "pg": "^8.8.0",
    "reflect-metadata": "^0.1.13",
    "ts-node": "^10.9.1",
    "typeorm": "^0.2.18"
  },
  "prettier": "gts/.prettierrc.json",
  "eslintConfig": {
    "extends": "./node_modules/gts/",
    "plugins": [
      "simple-import-sort"
    ],
    "rules": {
      "node/no-unpublished-import": 0,
      "simple-import-sort/exports": "error",
      "simple-import-sort/imports": "error",
      "@typescript-eslint/no-unused-vars": [
        "error"
      ],
      "max-classes-per-file": [
        "error",
        1
      ]
    },
    "ignorePatterns": [
      "node_modules/",
      "coverage*/",
      "bin/"
    ]
  }
}
